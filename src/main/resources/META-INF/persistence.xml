<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
		http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="teste1">

	
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>br.com.vectorx.testes2e3.entidade.Tbano</class>
		<class>br.com.vectorx.testes2e3.entidade.Tbdata</class>
		<class>br.com.vectorx.testes2e3.entidade.Tbtipo</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/operador" />
			<property name="javax.persistence.jdbc.user" value="operador" />
			<property name="javax.persistence.jdbc.password" value="operador" />

			
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.default_schema" value="vectorx" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>